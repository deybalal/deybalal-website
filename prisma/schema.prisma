generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Song {
  id                  String             @id @default(cuid())
  slug                String             @unique
  title               String
  titleEn             String
  artist              String
  artistEn            String
  albumName           String?
  coverArt            String?
  year                Int                @default(0)
  duration            Int                @default(0)
  uri                 String
  filename            String?
  index               Int                @default(autoincrement())
  lyrics              String?
  syncedLyrics        String?
  playCount           Int                @default(0)
  isDisabled          Boolean            @default(false)
  disabledDescription String?
  isActive            Boolean            @default(false)
  isFeatured          Boolean            @default(false)
  albumId             String?
  userId              String
  createdAt           DateTime           @default(now())
  updatedAt           DateTime           @updatedAt
  lyricsSource        String?
  lyricsSourceUrl     String?
  links               Json?
  ogg                 String?
  comments            Comment[]
  contributors        Contributor[]
  suggestions         LyricsSuggestion[]
  playHistory         PlayHistory[]
  album               Album?             @relation(fields: [albumId], references: [id])
  user                User               @relation(fields: [userId], references: [id])
  crew                SongCrew[]
  artists             Artist[]           @relation("ArtistToSong")
  genres              Genre[]            @relation("GenreToSong")
  playlists           Playlist[]         @relation("PlaylistToSong")

  @@index([title])
  @@index([artist])
  @@index([albumId])
  @@index([createdAt])
  @@index([slug])
}

model SongCrew {
  id     String @id @default(cuid())
  songId String
  role   String
  name   String
  song   Song   @relation(fields: [songId], references: [id], onDelete: Cascade)

  @@index([songId])
}

model Album {
  id           String    @id @default(cuid())
  name         String
  artistName   String
  artistNameEn String
  coverArt     String?
  releaseDate  Int?
  duration     Int       @default(0)
  isActive     Boolean   @default(true)
  isFeatured   Boolean   @default(false)
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  artistId     String?
  userId       String
  artist       Artist?   @relation(fields: [artistId], references: [id])
  user         User      @relation(fields: [userId], references: [id])
  comments     Comment[]
  songs        Song[]
  genres       Genre[]   @relation("AlbumToGenre")

  @@index([artistName])
  @@index([artistId])
}

model Playlist {
  id          String   @id @default(cuid())
  name        String
  description String?
  coverArt    String?
  duration    Int      @default(0)
  isFavorite  Boolean  @default(false)
  isPrivate   Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  songs       Song[]   @relation("PlaylistToSong")

  @@index([createdAt])
  @@index([isFavorite])
  @@index([userId])
}

model Artist {
  id          String   @id @default(cuid())
  name        String   @unique
  nameEn      String?
  image       String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  isVerified  Boolean  @default(false)
  albums      Album[]
  followers   Follow[]
  users       User[]
  description String?
  songs       Song[]   @relation("ArtistToSong")

  userId String?
  user   User?   @relation("ArtistCreator", fields: [userId], references: [id])

  @@index([nameEn])
  @@index([userId])
}

model Follow {
  id        String   @id @default(cuid())
  userId    String
  artistId  String
  createdAt DateTime @default(now())
  artist    Artist   @relation(fields: [artistId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, artistId])
  @@index([userId])
  @@index([artistId])
}

model Comment {
  id        String   @id @default(cuid())
  content   String
  userId    String
  userSlug  String
  songId    String?
  albumId   String?
  postTitle String
  isActive  Boolean  @default(false)
  isDeleted Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  album     Album?   @relation(fields: [albumId], references: [id], onDelete: Cascade)
  song      Song?    @relation(fields: [songId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([songId])
  @@index([albumId])
}

model LyricsSuggestion {
  id              String           @id @default(cuid())
  songId          String
  userId          String
  lyrics          String?
  syncedLyrics    String?
  status          SuggestionStatus @default(PENDING)
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt
  type            SuggestionType   @default(LYRICS)
  lyricsSource    String?
  lyricsSourceUrl String?
  song            Song             @relation(fields: [songId], references: [id], onDelete: Cascade)
  user            User             @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([songId])
  @@index([userId])
  @@index([status])
}

model Notification {
  id        String   @id @default(cuid())
  userId    String
  type      String
  title     String
  message   String
  link      String?
  isRead    Boolean  @default(false)
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([isRead])
}

model User {
  id                 String             @id
  name               String
  email              String             @unique
  emailVerified      Boolean            @default(false)
  image              String?
  createdAt          DateTime           @default(now())
  updatedAt          DateTime           @updatedAt
  isPrivate          Boolean            @default(false)
  isBanned           Boolean            @default(false)
  artistId           String?
  userIndex          Int                @unique @default(autoincrement())
  userSlug           String             @unique @default(nanoid(10)) @db.VarChar(10)
  role               Role               @default(user)
  isVerified         Boolean            @default(false)
  isUserAnArtist     Boolean            @default(false)
  downloadPreference Int                @default(128)
  albums             Album[]
  comments           Comment[]
  contributors       Contributor[]
  follows            Follow[]
  suggestions        LyricsSuggestion[]
  notifications      Notification[]
  playHistory        PlayHistory[]
  playlists          Playlist[]
  songs              Song[]
  badges             UserBadge[]
  accounts           Account[]
  sessions           Session[]
  artist             Artist?            @relation(fields: [artistId], references: [id])

  createdArtists Artist[] @relation("ArtistCreator")

  @@map("user")
}

model Contributor {
  id         String   @id @default(cuid())
  songId     String
  userId     String
  type       String
  percentage Int      @default(0)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  song       Song     @relation(fields: [songId], references: [id], onDelete: Cascade)
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([songId, userId, type])
  @@index([songId])
  @@index([userId])
}

model Session {
  id        String   @id
  expiresAt DateTime
  token     String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  ipAddress String?
  userAgent String?
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("session")
}

model Account {
  id                    String    @id
  accountId             String
  providerId            String
  userId                String
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("account")
}

model Verification {
  id         String   @id
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([identifier])
  @@map("verification")
}

model Genre {
  id        String   @id @default(cuid())
  name      String   @unique
  slug      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  albums    Album[]  @relation("AlbumToGenre")
  songs     Song[]   @relation("GenreToSong")

  @@index([slug])
}

model PlayHistory {
  id       String   @id @default(cuid())
  userId   String
  songId   String
  playedAt DateTime @default(now())
  song     Song     @relation(fields: [songId], references: [id], onDelete: Cascade)
  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([songId])
  @@index([playedAt])
}

model Badge {
  id          String      @id @default(cuid())
  name        String      @unique
  description String?
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  users       UserBadge[]
}

model UserBadge {
  id        String   @id @default(cuid())
  userId    String
  badgeId   String
  awardedAt DateTime @default(now())
  badge     Badge    @relation(fields: [badgeId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, badgeId])
  @@index([userId])
  @@index([badgeId])
}

enum Role {
  user
  moderator
  administrator
}

enum SuggestionStatus {
  PENDING
  APPROVED
  REJECTED
}

enum SuggestionType {
  LYRICS
  SYNCED
}
