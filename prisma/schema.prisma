// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Song {
  id                  String  @id @default(cuid())
  slug                String  @unique
  title               String
  titleEn             String
  artist              String
  artistEn            String
  albumName           String?
  coverArt            String?
  year                Int     @default(0)
  duration            Int     @default(0)
  uri                 String
  filename            String?
  index               Int     @default(autoincrement())
  lyrics              String?
  syncedLyrics        String?
  lyricsSource        String?
  lyricsSourceUrl     String?
  playCount           Int     @default(0)
  isDisabled          Boolean @default(false)
  disabledDescription String?
  isActive            Boolean @default(false)
  isFeatured          Boolean @default(false)

  albumId String?
  album   Album?  @relation(fields: [albumId], references: [id])

  userId String
  user   User   @relation(fields: [userId], references: [id])

  artists Artist[]

  playlists    Playlist[]
  comments     Comment[]
  suggestions  LyricsSuggestion[]
  contributors Contributor[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([title])
  @@index([artist])
  @@index([albumId])
  @@index([createdAt])
  @@index([slug])
}

model Album {
  id           String   @id @default(cuid())
  name         String
  artistName   String
  artistNameEn String
  coverArt     String?
  releaseDate  Int?
  duration     Int      @default(0)
  isActive     Boolean  @default(true)
  isFeatured   Boolean  @default(false)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  artistId String?
  artist   Artist? @relation(fields: [artistId], references: [id])

  userId String
  user   User   @relation(fields: [userId], references: [id])

  songs    Song[]
  comments Comment[]

  @@index([artistName])
  @@index([artistId])
}

model Playlist {
  id          String   @id @default(cuid())
  name        String
  description String?
  coverArt    String?
  duration    Int      @default(0)
  isFavorite  Boolean  @default(false)
  isPrivate   Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  songs Song[]

  @@index([createdAt])
  @@index([isFavorite])
  @@index([userId])
}

model Artist {
  id        String   @id @default(cuid())
  name      String   @unique
  nameEn    String?
  image     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  isVerified Boolean @default(false)

  songs     Song[]
  albums    Album[]
  users     User[]
  followers Follow[]

  @@index([nameEn])
}

model Follow {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  artistId  String
  artist    Artist   @relation(fields: [artistId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@unique([userId, artistId])
  @@index([userId])
  @@index([artistId])
}

model Comment {
  id        String  @id @default(cuid())
  content   String
  userId    String
  user      User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  userSlug  String
  songId    String?
  song      Song?   @relation(fields: [songId], references: [id], onDelete: Cascade)
  albumId   String?
  album     Album?  @relation(fields: [albumId], references: [id], onDelete: Cascade)
  postTitle String
  isActive  Boolean @default(false)
  isDeleted Boolean @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
  @@index([songId])
  @@index([albumId])
}

model LyricsSuggestion {
  id           String           @id @default(cuid())
  songId       String
  song         Song             @relation(fields: [songId], references: [id], onDelete: Cascade)
  userId       String
  user         User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  lyrics       String?
  syncedLyrics String?
  type         SuggestionType   @default(LYRICS)
  status       SuggestionStatus @default(PENDING)
  createdAt    DateTime         @default(now())
  updatedAt    DateTime         @updatedAt

  @@index([songId])
  @@index([userId])
  @@index([status])
}

model Notification {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  type      String // e.g., "NEW_RELEASE", "COMMENT_REPLY"
  title     String
  message   String
  link      String?
  isRead    Boolean  @default(false)
  createdAt DateTime @default(now())

  @@index([userId])
  @@index([isRead])
}

enum Role {
  user
  moderator
  administrator
}

enum SuggestionStatus {
  PENDING
  APPROVED
  REJECTED
}

enum SuggestionType {
  LYRICS
  SYNCED
}

model User {
  id            String     @id
  name          String
  email         String     @unique
  emailVerified Boolean    @default(false)
  image         String?
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt
  sessions      Session[]
  accounts      Account[]
  playlists     Playlist[]
  isPrivate     Boolean    @default(true)
  isBanned      Boolean    @default(false)

  artistId String?
  artist   Artist? @relation(fields: [artistId], references: [id])

  userIndex Int    @unique @default(autoincrement())
  userSlug  String @unique @default(nanoid(10)) @db.VarChar(10)

  role Role @default(user)

  follows       Follow[]
  comments      Comment[]
  notifications Notification[]
  songs         Song[]
  albums        Album[]
  suggestions   LyricsSuggestion[]
  contributors  Contributor[]

  @@map("user")
}

model Contributor {
  id         String   @id @default(cuid())
  songId     String
  song       Song     @relation(fields: [songId], references: [id], onDelete: Cascade)
  userId     String
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  type       String // "add", "lyrics", "sync"
  percentage Int      @default(0)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@unique([songId, userId, type])
  @@index([songId])
  @@index([userId])
}

model Session {
  id        String   @id
  expiresAt DateTime
  token     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  ipAddress String?
  userAgent String?
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([token])
  @@index([userId])
  @@map("session")
}

model Account {
  id                    String    @id
  accountId             String
  providerId            String
  userId                String
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt

  @@index([userId])
  @@map("account")
}

model Verification {
  id         String   @id
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([identifier])
  @@map("verification")
}
